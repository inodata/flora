{% for order in orders %}
<tr class="messenger-order-row" >
	<td class="sonata-ba-list-field sonata-ba-list-field-batch" objectid="{{ order.id }}"> <input name="idx[]" value="1" type="checkbox"></td>
	<td class="sonata-ba-list-field sonata-ba-list-field-integer" objectid="{{ order.id }}"><a href="/app_dev.php/admin/distribution/1/edit">{{ order.id }}</a></td>
	<td class="sonata-ba-list-field sonata-ba-list-field-text" objectid="{{ order.id }}">{{ order.firstProduct }}</td>
	<td class="sonata-ba-list-field sonata-ba-list-field-datetime" objectid="{{ order.id }}">{{ order.deliveryDate|date("m/d/Y") }}</td>
	<td class="sonata-ba-list-field sonata-ba-list-field-text" objectid="{{ order.id }}">{{ order.status }}</td>
	<td class="sonata-ba-list-field sonata-ba-list-field-actions" objectid="{{ order.id }}">
		{% if order.status == "intransit"%}
			<a href="javascript:void()" class="btn order-action deliver" title="Entregado" orderid="{{ order.id }}">
	    		<img src="/bundles/sonataadmin/famfamfam/accept.png" alt="Entregado">Entregar
			</a>
			<a href="javascript:void()" class="btn order-action cancel" title="Cancelado" orderid="{{ order.id }}">
				<img src="/bundles/sonataadmin/famfamfam/cancel.png" alt="Cancelado">Quitar
			</a>
		{% else %}
			<a href="javascript:void()" class="btn order-action intransit" title="Entregado" orderid="{{ order.id }}">
	    		<img src="/bundles/sonataadmin/famfamfam/accept.png" alt="En transito">En Transito
			</a>
			<a href="javascript:void()" class="btn order-action cancel" title="Cancelado" orderid="{{ order.id }}">
				<img src="/bundles/sonataadmin/famfamfam/cancel.png" alt="Cancelado">Quitar
			</a>
		{% endif %}
	</td>  
</tr>   
{% endfor %}